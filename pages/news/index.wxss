page {
  height:100%;
  background-color: #f0eff6;
}
.container {
  width: 100%;
  height: 100%;
}

.search-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.filter-icon {
  width: 40rpx;
  height: 40rpx;
  padding: 40rpx;
}

.post-source-container {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.source-tag {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-input {
  height: 50rpx;
  width: 88%;
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.15), 0px 2px 4px 0px rgba(0,0,0,0.10);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

.news-img {
  width: 140rpx;
  height: 140rpx;
  margin-top: 318rpx;
  margin-bottom: 30rpx;
}

.list-view {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.news {
  width: 88%;
  display: flex;
  flex-direction: column;
  height: 620rpx;
  background-color:#FFFFFF;
  margin-top: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.15), 0px 2px 4px 0px rgba(0,0,0,0.10);
}

.news-icon {
  width: 100%;
  height: 436rpx;
  margin-top: 20rpx;
  background-size: 100% 100%;
  background-position: center;
  background-repeat: no-repeat;
}

.news-detail {
  margin: 30rpx;
}

text {
  display: block;
}

.news-title {
  font-size: .9275rem;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.news-description {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  font-size: .725rem;
  color: #333333;
}

.have-read-news-title {
  font-size: .9275rem;
  color: #787878;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.have-read-news-description {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  font-size: .725rem;
  color: #787878;
}

.news-header {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  color: #787878;
  font-size: .625rem;
  align-items: center;
  justify-content: center;
}

.news-time {
  margin-left: 15rpx;
}

.news-source {
  margin-right: 15rpx;
}